<!-- views/pages/index.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head') %>
</head>

<body>
    <%- include ('../partials/header') %>
    <div class="wrapper scan">
        <div class="main">
            <div id="loading">
                <p>Scaning, It might take a while</p>
            </div>
            <div id="complete">
                <p>All Device on the network:</p>
                <ul id="content">
                </ul>
            </div>
        </div>
    </div>
    <%- include ('../partials/footer') %>
    <script>
        function init() {
            var baseUrl = getBaseUrl();
            var reqUrl = baseUrl + "/api/devices/scan";
            var xhr  = new XMLHttpRequest()
            xhr.open('GET', reqUrl, true)
            xhr.onload = function () {
                if (xhr.readyState == 4 && xhr.status == "200") {
                    var scanResult = JSON.parse(xhr.response);
                    if(scanResult && scanResult.length) {
                        var elem = document.createElement("div");
                        elem.classList.add('row');
                        scanResult.forEach(function(item){
                            var li = document.createElement('li');
                            li.classList.add("device-list");
                            li.innerHTML= 
                                `<div class="row justify-content-center">
                                        <div class="col-sm-12">${item.hostname}</div>
                                        <div class="col-sm-12">${item.mac_address}</div>
                                        <div class="col-sm-12">${item.ip4_address}</div>
                                        <div class="col-sm-12">
                                            <button class="addBtn" onclick="addDevice(${JSON.stringify(item)})">Add Device</button>
                                        </div>
                                </div>`
                            elem.appendChild(li);
                        });
                        document.getElementById('content').appendChild(elem);
                    }
                }
            }
            xhr.send(null);
        }
        init();

        function addDevice(data) {
            var device = JSON.parse(data);
            console.log(device);
        }

        function getBaseUrl() {
            var url = window.location.href;
            var arr = url.split("/");
            return arr[0] + "//" + arr[2];
        }


    </script>
</body>

</html>